{% load global_tags %}
<ul class="cf">
{% for dish in dishes %}
    <li class="{% cycle 'odd' 'even' %} fleft">
        <div class="info cf">
            <div class="photo fleft">
                <img alt="" src="{{ dish.main_pic.image160x100.url }}" />
                <a class="photo_bg_160x100" href="{% slugurl restaurant restaurant-view-dish restaurant.id dish.id %}"></a>
            </div>
            <div class="content fleft">
                <h3 class="entry_title"><a href="{% slugurl restaurant restaurant-view-dish restaurant.id dish.id %}">{{ dish.name }}</a></h3>
                <p class="description">{{ dish.description|slice:":30" }}</p>
                <div class="price">
                {% if dish.reserve %}
                
                {% if not dish.sale_out %}
                    <div class="normal"><span>Price</span> NT.{{ dish.price }}</div>
                    {% if dish.vip_price > 0 %}
                    <div class="vip"><span>VIP</span> NT.{{ dish.vip_price }}</div>
                    {% endif %}
                {% else %}
                    <div class="sold_out"><span>Sold Out</span></div>
                {% endif %}
                    
                {% else %}
                    <div class="no_reserve"><span>不開放線上訂餐</span></div>
                {% endif %}
                </div>
            </div>
        </div>
        <div class="function cf">
        {% if manager %}
               <div class="delete fright" ><input class="btn2" name="delete" type="button" value="Delete" /></div>
               <div class="edit fright"><a class="btn2" href="">Edit</a></div>
           {% else %}
           
               {% if dish.reserve and not dish.sale_out %}
               <div class="num_operate_input">
                   <div class="fright add_to_cart"><a class="btn4" href="#">Add to Cart</a></div>
                   <div class="fright order_num cf">
                       <input class="fleft num_input" type="text" name="" value="0" />
                       <div class="num_oprate fleft">
                           <input class="num_add" type="button" />
                           <input class="num_minus" type="button" />
                       </div>
                   </div>
                   <label class="fright" for="order_num">數量</label>
               </div>
               {% endif %}
               
        {% endif %}
        </div>
        {% if forloop.counter|divisibleby:2 %}{% if forloop.counter != dishes|length %}<div class="sp_hr_line"></div>{% endif %}{% endif %}
    </li>
{% endfor %}
</ul>
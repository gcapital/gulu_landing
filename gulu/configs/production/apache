<VirtualHost *:80>
    ServerName api.gulu.com
    
    #SetEnvIf X-Forwarded-For "^163\.192\..*\..*" trib
    #<Location /> # until launch
    #     Order Deny,Allow
    #     Allow from all
    #     # Allow from env=trib
    #</Location>

    WSGIScriptAlias / /home/gulu/sites/gulu/repository/gulu/configs/production/production.wsgi
    <Directory /home/gulu/sites/gulu/repository/gulu>
        Order deny,allow
        Allow from all
    </Directory>
    
    Redirect permanent /favicon.ico http://media-api.gulu.com/static/favicon.ico
    
    Alias /robots.txt /home/gulu/sites/gulu/repository/gulu/assets/robots.txt

    ErrorLog /home/gulu/logs/gulu.error.log
    LogLevel warn

    SetEnvIf X-Forwarded-For "^.*\..*\..*\..*" is-forwarder
    LogFormat "%{X-Forwarded-For}i %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\" %I %O" combinedio
    LogFormat "[%h] %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\" %I %O" combinedio2
    CustomLog /home/gulu/logs/gulu.access.log combinedio env=is-forwarder
    CustomLog /home/gulu/logs/gulu.access.log combinedio2 env=!is-forwarder

    ServerSignature Off
    
    RewriteEngine on
    # canonical hostname
    #RewriteCond %{HTTP_HOST} !^gulu.com [NC] 
    #RewriteRule ^/(.*)  http://www.gulu.com/$1 [L,R]
    
    RewriteCond %{REQUEST_URI} /maintenance.html$ 
    RewriteRule $ / [R=302,L]
</VirtualHost>